@require "base"

#autodl-tb
	background: transparent url(../img/prefs_dark.png) no-repeat center

.autodl-listbox
	@extend $autodl-listbox
	border: none
	background-color: #282828

.autodl-listbox-item
	@extend $autodl-listbox-item
	color: #888

	&:hover
		background: #3B3B3B

.autodl-listbox-item-selected
	background: #474747

	&:hover
		background: #555555

#autodl-multiselect
	@extends $autodl-multiselect

#autodl-multiselect-select
	@extends $autodl-multiselect-select
	margin-left: 10px
	background: none
	background-color: #282828
	color: #888

#autodl-irssi-log
